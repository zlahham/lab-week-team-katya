%html
  %head
    %title Virtual Assistant

    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css", :rel => "stylesheet"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"}

  %body

    - if current_user
      Welcome, #{current_user.name}
      %form{:method => "post", :action => "/sessions"}
        %input{:type => "hidden", :name => "_method", :value => "delete"}
        %input.button{:type => "submit", :value => "Sign out"}
      %form{:action => "/tasks/new"}
        %input.button{:type => "submit", :value => "New task"}
    -else
      Welcome to Virtual Assistant
      %ul#menu
        %li
          %a{:href => "/users/new"} Sign up
        %li
          %a{:href => "/sessions/new"} Sign in


    - if flash[:errors] && !flash[:errors].empty?
      Please refer to the errors below
      %ul
        - flash[:errors].each do |error|
          %li #{error}

      - if flash[:notice]
        %p #{flash[:notice]}

    =yield
