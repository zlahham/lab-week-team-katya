.container
  %center
    %h3 Please sign up
    .row
      .col-md-4.col-md-offset-4
        %form{:action => "/users", :method => "post"}
          .form-group
            %label{:for => "exampleInputEmail1"} Email address
            %input#exampleInputEmail1.form-control{:name => "email", :placeholder => "Email", :type => "email"}
          .form-group
            %label{:for => "exampleInputPassword1"} Password
            %input#exampleInputPassword1.form-control{:name => "password", :placeholder => "Password", :type => "password"}
          .form-group
            %label{:for => "exampleInputPassword1"} Password Confirmation
            %input#exampleInputPassword_confirmation.form-control{:name => "password_confirmation", :placeholder => "Password Confirmation", :type => "password"}
          .form-group
            %label{:for => "exampleInputName"} Name
            %input#exampleInputEmail1.form-control{:name => "name", :placeholder => "Name", :type => "text"}
          %button.btn.btn-default{:type => "submit"} Sign up